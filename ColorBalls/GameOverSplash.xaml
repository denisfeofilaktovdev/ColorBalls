<Window x:Class="ColorBalls.GameOverSplash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorBalls"
        mc:Ignorable="d"
        Title="GameOverSplash" Height="200" Width="300" WindowStyle="None">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0,0">
                <GradientStop Color="#FF01080E"/>
                <GradientStop Color="#FF091D2B" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="Game Over" HorizontalAlignment="Left" Height="53" Margin="51,45,0,0" VerticalAlignment="Top" Width="192" FontFamily="Roboto" FontSize="36" FontWeight="Bold" Foreground="#FF919191">
            <Label.Effect>
                <DropShadowEffect Opacity="0.75" BlurRadius="15"/>
            </Label.Effect>
        </Label>
        <Button Content="Try Again" HorizontalAlignment="Left" Height="37" Margin="90,117,0,0" VerticalAlignment="Top" Width="117" IsCancel="True" FontFamily="Corbel" BorderBrush="{x:Null}" Foreground="#FF091C29" Background="#FF919191" FontWeight="Bold" Click="Button_Click"/>

    </Grid>
</Window>
